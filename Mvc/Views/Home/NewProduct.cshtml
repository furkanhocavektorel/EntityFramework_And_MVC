    Layout = null;
}


<html>

<head>
    <meta charset="utf-8">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>
    <div>
        <h2>
            @ViewBag.Metinn
        </h2>
    </div>

    <div class="myheader " style="background-color: rgba(165, 180, 219, 0.39); ">
        <header class="d-flex justify-content-center py-3">
            <ul class="nav nav-pills">
                <li class="nav-item"><a href="/home/index" class="nav-link active" aria-current="page">Product</a></li>
                <li class="nav-item"><a href="/customer/listcustomer" class="nav-link ">Customers</a></li>
                <li class="nav-item"><a href="#" class="nav-link">Pricing</a></li>
                <li class="nav-item"><a href="#" class="nav-link">FAQs</a></li>
                <li class="nav-item"><a href="#" class="nav-link">About</a></li>
            </ul>
        </header>
    </div>

    <div class="myform d-flex" >

        <div class="col-3"></div>
        <div class="col-6 " style="background-color: beige; margin-top:50px; padding:20px;">
        <form class="row g-3" action="/home/createproduct" method="post">
            <div class="col-md-12">
                    <label for="ProductName" class="form-label">ProductName</label>
                    <input type="text" class="form-control" name="productname" id="ProductName">
            </div>
            <div class="col-md-12">
                    <label for="inputPassword4" class="form-label">UnitPrice</label>
                <input type="text" class="form-control" name="unitprice" id="inputPassword4">
            </div>
            <div class="col-12">
                    <label for="inputAddress" class="form-label">UnitsInStock</label>
                <input type="text" class="form-control" name="stock" id="inputAddress">
            </div>
         
         
            <div class="col-md-4">
                <label for="inputState" class="form-label">State</label>
                <select id="inputState" class="form-select" name="categoryid">
                    <option selected>CategoryId</option>
                    <option value="1">Et</option>
                    <option value="2">Baharat</option>
                    <option value="3">Süt</option>

                </select>
            </div>
          
            <div class="col-12">
                <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck" name="Discontinued">
                    <label class="form-check-label" for="gridCheck">
                            Discontinued
                    </label>
                </div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">kaydet</button>
            </div>
        </form>
        </div>
        <div class="col-3"></div>


    </div>

  










